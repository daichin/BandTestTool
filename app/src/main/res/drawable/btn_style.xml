<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Normal button -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffffff" android:endColor="#8494b2" android:angle="270"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#8494b2"/>
        </shape>
    </item>

    <!--Pressed button -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#c6deff" android:endColor="#8494b2" android:angle="90"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#8494b2"/>
        </shape>
    </item>

</selector>